{
  "extends": "@eunchurn/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/__tests__"
  ]
}